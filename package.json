{
  "name": "bpmn-groovy-coder",
  "displayName": "BPMN Groovy Coder",
  "description": "WIP: edit groovy script directly from vscode, with full language support.",
  "version": "0.1.1",
  "license": "MIT",
  "publisher": "alexNeto",
  "engines": {
    "vscode": "^1.64.0"
  },
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#1d1c1a",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://https://github.com/alexNeto/bpmn-groovy-coder"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:bpmn-coder.deploy",
    "onLanguage:bpmn"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bpmn",
        "aliases": [
          "BPMN",
          "bpmn"
        ],
        "extensions": [
          ".bpmn2",
          ".bpmn",
          ".bpmn20.xml"
        ]
      }
    ],
    "commands": [
      {
        "command": "bpmn-coder.deploy",
        "title": "Deploy BPMN",
        "icon": {
          "light": "resources/upload-icon-dark.svg",
          "dark": "resources/upload-icon-light.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == bpmn",
          "command": "bpmn-coder.deploy",
          "group": "navigation"
        }
      ]
    },
    "grammars": [
      {
        "language": "bpmn",
        "scopeName": "source.bpmn",
        "path": "./syntaxes/bpmn.tmLanguage.json"
      },
      {
        "language": "groovy",
        "scopeName": "source.groovy",
        "path": "./syntaxes/groovy.tmLanguage.json"
      },
      {
        "language": "xml",
        "scopeName": "source.xml",
        "path": "./syntaxes/xml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "bpmn",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "ts-loader": "^9.2.6",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "@vscode/test-electron": "^2.1.2"
  }
}
